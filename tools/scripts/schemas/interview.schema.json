{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "InterviewRecord",
  "type": "object",
  "required": ["id", "date", "method", "participant", "consent", "insights", "pain_points"],
  "properties": {
    "id": { "type": "string" },
    "date": { "type": "string" },
    "method": { "type": "string", "enum": ["online", "in_person", "hybrid"] },
    "participant": {
      "type": "object",
      "required": ["pseudonym", "segment"],
      "properties": {
        "pseudonym": { "type": "string" },
        "segment": { "type": "string" }
      }
    },
    "consent": { "type": "boolean" },
    "insights": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "pain_points": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "quotes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
